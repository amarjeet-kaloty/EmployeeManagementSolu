{
  "ConnectionStrings": {
    "MongoDB": "mongodb://localhost:27017/EmployeesCollection"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug"
    }
  },
  "Keycloak": {
    "Realm": "EmployeeMgmtRealm",
    "AuthServerUrl": "http://host.docker.internal:8400/",
    "SslRequired": "none",
    "Resource": "employee-api",
    "VerifyTokenAudience": true,
    "EnableRolesMapping": "All",
    "RolesSource": "resource-access",
    "RoleClaimType": "roles"
  },
  "AllowedHosts": "*"
}